    "version": "0.2.0",
    "configurations": [
        {
            "name": "CLI Patch",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "program": "${workspaceRoot}/cli/bin/script/cli.js",
            "stopOnEntry": false,
            "sourceMaps": true,
            "preLaunchTask": "gulp: build",
            "args": [
                "patch", "test11-android", "Staging", "-t", "1.13"
            ]
        },
        {
            "name": "CLI Promote",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "program": "${workspaceRoot}/cli/bin/script/cli.js",
            "stopOnEntry": false,
            "sourceMaps": true,
            "preLaunchTask": "gulp: build",
            "args": [
                "promote", "test11-android", "Staging", "Production"
            ]
        },
        {
            "name": "Unit Test",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
            "stopOnEntry": false,
            "sourceMaps": true,
            "args": [
                "test"
            ]
        }
    ]
}